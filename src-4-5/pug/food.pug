doctype xml
extension(type="component" version="2.5.0" method="upgrade")
	name COM_FOOD
	creationDate= create
	author= author
	authorEmail= authorEmail
	authorUrl= authorUrl
	copyright Copyright © 2008 - all right reserved
	license License #{license}
	version= version
	description <![CDATA[ Компонент <code>com_food</code> для Joomla CMS 4.x-5.x. Обслуживания директории food сайта школы. Актуально для школ РФ. Предназначен для использования в административной панели Joomla CMS 4.x-5.x. ]]>
	scriptfile install.php
	namespace(path="src/") ProjectSoft\Component\Food
	administration
		menu(img="class:folder-open" link="option=com_food") COM_FOOD
		files(folder="admin")
			folder assets
			folder htaccess
			folder languages
			folder services
			folder src
			folder tmpl
			filename access.xml
			filename config.xml
			filename .htaccess
			filename .update.json
		languages(folder="admin")
			language(tag="en-GB") languages/en-GB/en-GB.com_food.ini
			language(tag="en-GB") languages/en-GB/en-GB.com_food.sys.ini
			language(tag="en-US") languages/en-US/en-US.com_food.ini
			language(tag="en-US") languages/en-US/en-US.com_food.sys.ini
			language(tag="ru-RU") languages/ru-RU/ru-RU.com_food.ini
			language(tag="ru-RU") languages/ru-RU/ru-RU.com_food.sys.ini
	updateservers
		server(type="extension" priority="1" name="Сайт обновлений компонента «ПИТАНИЕ»")
			|https://projectsoft-studionions.github.io/com_food/food-update-#{versZip}.xml
