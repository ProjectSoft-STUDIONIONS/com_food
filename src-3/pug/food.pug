doctype xml
extension(type="component" version="2.5.0" method="upgrade")
	name COM_FOOD
	creationDate= create
	author= author
	authorEmail= authorEmail
	authorUrl= authorUrl
	copyright Copyright © 2008 - all right reserved
	license License #{license}
	version= version
	description <![CDATA[Компонент <code>com_food</code> для Joomla CMS 3.x. Обслуживания директории food сайта школы. Актуально для школ РФ. Предназначен для использования в административной панели Joomla CMS 3.x.]]>
	scriptfile install.php
	administration
		menu(link="option=com_food") COM_FOOD
		files(folder="admin")
			folder assets
			folder controllers
			folder helpers
			folder languages
			folder models
			folder views
			filename access.xml
			filename config.xml
			filename food.php
			filename .htaccess
			filename .update.json
		languages(folder="admin")
			language(tag="en-GB") languages/en-GB/en-GB.com_food.ini
			language(tag="en-GB") languages/en-GB/en-GB.com_food.sys.ini
			language(tag="en-US") languages/en-US/en-US.com_food.ini
			language(tag="en-US") languages/en-US/en-US.com_food.sys.ini
			language(tag="ru-RU") languages/ru-RU/ru-RU.com_food.ini
			language(tag="ru-RU") languages/ru-RU/ru-RU.com_food.sys.ini
