		style
			|:root {
			|	--pd: 15px;
			|	--mg: -15px;
			|}
			|*, *::before, *::after {
			|	box-sizing: border-box;
			|}
			|header, main, article, footer {
			|	display: block;
			|}
			|html, body {
			|	margin: 0;
			|}
			|body {
			|	display: flex;
			|	flex-direction: column;
			|	min-height: 100vh;
			|	font-family: Tahoma, sans-serif;
			|	line-height: 1.4;
			|	background-color: #fff;
			|	color: #333;
			|}
			|body > footer, body > header {
			|	flex: 0 0 auto;
			|	padding-left: var(--pd);
			|	padding-right: var(--pd);
			|	background-color: #000;
			|	color: #fff;
			|}
			|body > footer a, body > header a {
			|	color: #fff;
			|}
			|body > footer {
			|	padding-top: var(--pd);
			|	text-align: right;
			|	padding-bottom: 5px;
			|	padding-left: var(--pd);
			|	padding-right:var(--pd);
			|	box-shadow: 0 0 5px #dcdcdc;
			|}
			|body > main {
			|	flex: 1 0 auto;
			|	padding-top: 30px;
			|	padding-left: var(--pd);
			|	padding-right: var(--pd);
			|	padding-bottom: 2em;
			|	background-color: #fff;
			|	background-image: url('joomla.svg');
			|	background-position: center center;
			|	background-size: contain;
			|	background-repeat: no-repeat;
			|	color: #333;
			|}
			|.articles {
			|	display: flex;
			|	flex-direction: row;
			|	flex-wrap: wrap;
			|	gap: 30px;
			|	justify-content: flex-start;
			|
			|}
			|.articles article {
			|	display: flex;
			|	flex-direction: column;
			|	padding: var(--pd);
			|	box-shadow: 0 0 5px #dcdcdc;
			|	max-width: calc(100% / 7);
			|	min-width: 263px;
			|	width: 100vw;
			|	flex: 1 0 auto;
			|	transform: scale(1);
			|	transition: all .3s ease;
			|	overflow: hidden;
			|	background-color: rgb(255, 255, 255, .89);
			|}
			|.articles article:hover {
			|	box-shadow: 0 0 13px #b9b9b9;
			|	transform: scale(1.03);
			|	border-top-right-radius: 2em;
			|	border-bottom-left-radius: 3em;
			|	background-color: rgb(255, 255, 255, 1);
			|}
			|.articles article h3 {
			|	margin: 0;
			|}
			|.articles article ul {
			|	margin-bottom: 0;
			|}
			|.articles article ul li {
			|	border-bottom: dashed 1px #b3b1b1;
			|	margin-bottom: 15px;
			|	padding-bottom: 10px;
			|}
			|.articles article ul li:last-child {
			|	margin-bottom: unset;
			|}
			|.articles article ul li div {
			|	display: flex;
			|	flex-direction: column;
			|}
			|.text-right {
			|	text-align: right;
			|}
