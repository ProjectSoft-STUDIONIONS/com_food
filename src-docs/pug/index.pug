		meta(name="apple-mobile-web-app-title" content="Компонент «ПИТАНИЕ» для Joomla")
		style
			include ../main.css
	body
		header
			div
				h1
					|Компонент «ПИТАНИЕ» для Joomla
				p
					|Компонент <code>com_food</code> для Joomla CMS. Обслуживание директории <code>food</code> сайта школы. Актуально для сайтов школ РФ.
			div
				a(href="https://github.com/ProjectSoft-STUDIONIONS/com_food" target="_blank")
					include ../images/github.svg
		main
			include ../images/joomla.svg
			h2
				|Версии
			div.articles
				article
					head
						h3
							|Последняя версия
					div
						ul
							li
								div
									span
										|Для Joomla 3.x
									span.text-right
										a.btn(href="https://github.com/ProjectSoft-STUDIONIONS/com_food/releases/latest/download/com_food-3.x.zip" download="com_food-3.x.zip")
											|Скачать
							li
								div
									span
										|Для Joomla 4.x
									span.text-right
										a.btn(href="https://github.com/ProjectSoft-STUDIONIONS/com_food/releases/latest/download/com_food-4.x.zip" download="com_food-4.x.zip")
											|Скачать
							li
								div
									span
										|Для Joomla 5.x
									span.text-right
										a.btn(href="https://github.com/ProjectSoft-STUDIONIONS/com_food/releases/latest/download/com_food-5.x.zip" download="com_food-5.x.zip")
											|Скачать
							li
								div
									span
										|Для Joomla 6.x
									span.text-right
										a.btn(href="https://github.com/ProjectSoft-STUDIONIONS/com_food/releases/latest/download/com_food-6.x.zip" download="com_food-6.x.zip")
											|Скачать
				each version in versions
					article
						head
							h3= version
						div
							ul
								each jvers in joomvers
									li
										div
											span
												|Для Joomla #{jvers}
											span.text-right
												a.btn(href="https://github.com/ProjectSoft-STUDIONIONS/com_food/releases/download/" + version + "/com_food-" + jvers + ".x.zip" download=version+"-com_food-" + jvers + ".x.zip")
													|Скачать
				each version in vers_one
					article
						head
							h3= version
						div
							ul
								each jvers in jvers_one
									li
										div
											span
												|Для Joomla #{jvers}
											span.text-right
												a.btn(href="https://github.com/ProjectSoft-STUDIONIONS/com_food/releases/download/" + version + "/com_food-" + jvers + ".x.zip" download=version+"-com_food-" + jvers + ".x.zip")
													|Скачать
